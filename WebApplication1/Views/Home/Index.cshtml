@model SampleApplication.ViewModels.HomeIndexViewModel

	@{
		ViewBag.Title = "Home Page";
		Layout = "~/Views/Shared/_Layout.cshtml";
	}
<html>
    <body>
		<h1>@Model.Message </h1>
        <h1>Name of restaraunts</h1>

        <table>
            @foreach (var restaurant in Model.Restaraunts)
            {
                <tr>
                        <td>@restaurant.Name </td>
                    <td>@restaurant.Id</td>
                    <td><a href = "/home/details/@restaurant.Id">Details</a></td>
                    <td><a asp-action = "Details" asp-route-id = "@restaurant.Id">More details</a></td>
                </tr>
            }
            <tr><a asp-action="Create" >Create</a></tr>
        </table>
        This is the index view
    </body>
</html>